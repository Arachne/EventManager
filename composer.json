{
    "name": "arachne/event-manager",
    "description": "Simple integration of Doctrine EventManager to Nette framework.",
    "type": "library",
    "keywords": [ "nette", "arachne", "doctrine", "events" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "arachne/container-adapter": "^0.1.0|^0.2.0",
        "doctrine/common": "^2.5.0",
        "nette/di": "^2.3.0",
        "nette/utils": "^2.3.0",
        "symfony/doctrine-bridge": "^2.8.0|^3.0.0"
    },
    "require-dev": {
        "php": ">=5.5.0",
        "arachne/bootstrap": "~0.2.1",
        "arachne/codeception": "~0.6.3",
        "codeception/codeception": "~2.2.0@rc"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\EventManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/integration/src"
        }
    }
}
